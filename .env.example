# API Keys
OPENAI_API_KEY=your_openai_api_key_here  # Required for local execution
LANGSMITH_API_KEY=your_langsmith_api_key_here  # Always required

# Optional: LangSmith Project
LANGSMITH_PROJECT=airline-red-teaming

# Execution Mode Configuration
EVALUATION_MODE=local  # Options: "local" or "remote"

# Remote Deployment Settings (required when EVALUATION_MODE=remote)
LANGGRAPH_DEPLOYMENT_URL=https://your-deployment.smith.langchain.com
LANGGRAPH_API_KEY=your_deployment_api_key_here

# Dataset Configuration
DATASET_NAME=Airline Red Teaming
DATASET_URL=https://smith.langchain.com/public/c232f4e0-0fc0-42b6-8f1f-b1fbd30cc339/d

# Model Configuration
ASSISTANT_MODEL=gpt-4o
RED_TEAM_MODEL=gpt-4o
EVALUATOR_MODEL=gpt-4o

# Evaluation Settings
NUM_EXAMPLES=5  # Number of examples to run (omit for all)
MAX_TURNS=10  # Maximum conversation turns
SKIP_EXAMPLE=false  # Skip the example simulation
